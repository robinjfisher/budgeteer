<div class="row">
	<div class="col-lg-8">
		<h2>Upload your file</h2>

		<%= form_tag "/accounts/#{@account.id}/upload", :multipart => true do %>

			<label for="file">Choose a file:</label>
			<%= file_field_tag "file", class: "form-control" %>

			<p><%= submit_tag "Upload", class: "btn btn-primary" %></p>

		<% end %>
	</div><!-- eo .col-lg-8 -->
</div><!-- eo .row -->