<div class="row">
	<div class="col-lg-4">
		<h3><%= @account.name %></h3>
	</div>
	<div class="col-lg-8">
		<p><%= link_to "Import CSV", new_file_upload_path, class: "btn btn-primary pull-right" %></p>
		<h3>Transactions</h3>
		<table class="table">
			<thead>
				<tr>
					<th>Date</th>
					<th>Description</th>
					<th>Category</th>
					<th>Amount</th>
				</tr>
			</thead>
			<tbody>
				<% @account.transactions.each do |t| %>
				<tr>
					<td><%= t.date.strftime("%d %B %Y") %></td>
					<td><%= t.description %></td>
					<td><%= t.subcategory %></td>
					<td><%= display(t.amount_in_pennies) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>