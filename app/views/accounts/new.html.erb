<div class="row">
	<div class="col-lg-8">
		<h1>Add a new account</h1>

		<%= semantic_form_for @account, url: create_account_path do |f| %>
	
			<%= f.input :name, input_html: {class: "form-control"} %>
	
			<%= f.input :description, input_html: {class: "form-control"} %>
			
			<li class="string input optional stringish" id="account_current_balance_input"><label class=" label" for="account_current_balance">Current Balance</label>
				<%= f.text_field :current_balance, class: "form-control" %>
			</li>
			
	
			<%= f.action :submit, button_html: {class: "btn btn-primary"} %>
			<%= f.action :cancel, as: :link %>
	
		<% end %>
	</div><!-- eo .col-lg-8 -->
</div><!-- eo .row -->